<launch>
    <!-- No namespace here as we will share this description. 
         Access with slash at the beginning -->
    <param name="robot_description"
      command="$(find xacro)/xacro.py $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />
  
    <!-- BEGIN ROBOT 1-->
    <group ns="robot1">
      <param name="tf_prefix" value="robot1_tf" />
      <include file="$(find ej2_p1)/launch/one_robot.launch" >
        <arg name="init_pose" value="-x 1 -y 1 -z 0.1" />
        <arg name="robot_name"  value="Robot1" />
      </include>
    </group>
    <node pkg="ej2_p1" type="controller.py" name="robot1" args="robot1" output="screen"/>

    <group ns="robot2">
      <param name="tf_prefix" value="robot2_tf" />
      <include file="$(find ej2_p1)/launch/one_robot.launch" >
        <arg name="init_pose" value="-x -1 -y 1 -z 0.1" />
        <arg name="robot_name"  value="Robot2" />
      </include>
    </group>
    <node pkg="ej2_p1" type="controller.py" name="robot2" args="robot2"/>

    <group ns="robot3">
      <param name="tf_prefix" value="robot3_tf" />
      <include file="$(find ej2_p1)/launch/one_robot.launch" >
        <arg name="init_pose" value="-x 1 -y -1 -z 0.1" />
        <arg name="robot_name"  value="Robot3" />
      </include>
    </group>
    <node pkg="ej2_p1" type="controller.py" name="robot3" args="robot3"/>

    <group ns="robot4">
      <param name="tf_prefix" value="robot4_tf" />
      <include file="$(find ej2_p1)/launch/one_robot.launch" >
        <arg name="init_pose" value="-x -1 -y -1 -z 0.1" />
        <arg name="robot_name"  value="Robot4" />
      </include>
    </group>
    <node pkg="ej2_p1" type="controller.py" name="robot4" args="robot4"/> 

  </launch>